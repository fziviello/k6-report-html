{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": "error",
    "curly": "error",
    "no-unused-vars": "error",
    "no-var": "error",
    "no-this-before-super": "error",
    "no-invalid-this": "error",
    "prefer-template": "error"
  },
  "ignorePatterns": ["dist/**", "webpack.config.js"]
}
